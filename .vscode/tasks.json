{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy to rc server",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "rc-apps",
            "options": {
                "cwd": "./app"
            },
            "args": [
                "deploy",
                "-p=123",
                "-u=hans",
                "--update",
                "--url=http://localhost:3000"
            ],
            "dependsOn": ["npm install missing app dependencies"]
        },
        {
            "label": "npm install missing app dependencies",
            "type": "shell",
            "options": {
                "cwd": "./app"
            },
            "command": "install-missing",

        },
        {
            "type": "typescript",
            "tsconfig": "./tsconfig-test.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "Watch Test Task"
        }
    ]
}
