{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy to rc server",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "rc-apps",
            "options": {
                "cwd": "./src"
            },
            "args": [
                "deploy",
                "-p=123",
                "-u=hans",
                "--update",
                "--url=http://localhost:3000"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc: watch - tsconfig.json"
        }
    ]
}
