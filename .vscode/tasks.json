{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "update extension on test rc server",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "rc-apps",
            "options": {
                "cwd": "./app"
            },
            "args": [
                "deploy",
                "-p=123",
                "-u=hans",
                "--update",
                "--url=http://localhost:3000"
            ],
            "dependsOn": ["npm install missing app dependencies"]
        },
        {
            "label": "install extension on rc server",
            "type": "shell",
            "command": "rc-apps",
            "options": {
                "cwd": "./app"
            },
            "args": [
                "deploy",
                "-p=123",
                "-u=hans",
                "--url=http://localhost:3000"
            ],
            "dependsOn": ["npm install missing app dependencies"]
        },
        {
            "label": "npm install missing app dependencies",
            "type": "shell",
            "options": {
                "cwd": "./app"
            },
            "windows":{
                // Just install node packages if not already installed
                "command": "if (-not (Test-Path node_modules)) { npm i }",  
            },
            "command": "npm i"
        },
        {
            "type": "typescript",
            "tsconfig": "./tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "Watch Test Task"
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": "npm run coverage",
            "problemMatcher": "$tsc-watch"
        }
    ]
}
